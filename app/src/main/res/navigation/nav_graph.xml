<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.mostafahelal.atmodrive2.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_intro"
            app:destination="@id/intro"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/intro"
        android:name="com.mostafahelal.atmodrive2.Intro"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_intro_to_forgetPassword"
            app:destination="@id/forgetPassword" />
        <action
            android:id="@+id/action_intro_to_createAccount"
            app:destination="@id/createAccount" />
    </fragment>
    <fragment
        android:id="@+id/forgetPassword"
        android:name="com.mostafahelal.atmodrive2.ForgetPassword"
        android:label="fragment_forget_password"
        tools:layout="@layout/fragment_forget_password" >
        <action
            android:id="@+id/action_forgetPassword_to_verify"
            app:destination="@id/verify" />
    </fragment>
    <fragment
        android:id="@+id/verify"
        android:name="com.mostafahelal.atmodrive2.Verify"
        android:label="fragment_verify"
        tools:layout="@layout/fragment_verify" >
        <action
            android:id="@+id/action_verify_to_resetPassword"
            app:destination="@id/resetPassword" />
    </fragment>
    <fragment
        android:id="@+id/resetPassword"
        android:name="com.mostafahelal.atmodrive2.ResetPassword"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" />
    <fragment
        android:id="@+id/createAccount"
        android:name="com.mostafahelal.atmodrive2.CreateAccount"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account" >
        <action
            android:id="@+id/action_createAccount_to_step2CreateAccount"
            app:destination="@id/step2CreateAccount" />
    </fragment>
    <fragment
        android:id="@+id/step2CreateAccount"
        android:name="com.mostafahelal.atmodrive2.Step2CreateAccount"
        android:label="fragment_step2_create_account"
        tools:layout="@layout/fragment_step2_create_account" >
        <action
            android:id="@+id/action_step2CreateAccount_to_step3CreateAccount"
            app:destination="@id/step3CreateAccount" />
    </fragment>
    <fragment
        android:id="@+id/step3CreateAccount"
        android:name="com.mostafahelal.atmodrive2.Step3CreateAccount"
        android:label="fragment_step3_create_account"
        tools:layout="@layout/fragment_step3_create_account" >
        <action
            android:id="@+id/action_step3CreateAccount_to_step4CreateAccount"
            app:destination="@id/step4CreateAccount" />
    </fragment>
    <fragment
        android:id="@+id/step4CreateAccount"
        android:name="com.mostafahelal.atmodrive2.Step4CreateAccount"
        android:label="fragment_step4_create_account"
        tools:layout="@layout/fragment_step4_create_account" >
        <action
            android:id="@+id/action_step4CreateAccount_to_step5CreateAccount"
            app:destination="@id/step5CreateAccount" />
    </fragment>
    <fragment
        android:id="@+id/step5CreateAccount"
        android:name="com.mostafahelal.atmodrive2.Step5CreateAccount"
        android:label="fragment_step5_create_account"
        tools:layout="@layout/fragment_step5_create_account" />
</navigation>